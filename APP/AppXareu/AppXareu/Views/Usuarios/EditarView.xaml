<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXareu.Views.Usuarios.EditarView"
             Title="EditarView">
    
    <VerticalStackLayout>
        
        <Entry Placeholder="Digite a nova senha" Text="{Binding NewSenha}" IsPassword="True" 
Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" ></Entry>
        
        
        <Button Text="Confirmar" Command="{Binding EditarCommand}" Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>